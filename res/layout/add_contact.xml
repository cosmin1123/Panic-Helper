<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="1" android:gravity="center">
        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Name"
                android:id="@+id/textView" android:layout_weight="3"
                android:gravity="center"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText" android:layout_weight="7" android:gravity="center"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="0dp" android:id="@+id/linearLayout" android:layout_weight="1"
                  android:gravity="center">
        <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="Phone Number"
                  android:id="@+id/textView2" android:layout_weight="3" android:gravity="center"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editText4" android:layout_weight="7" android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="1" android:gravity="center">
        <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="Call Contact"
                  android:id="@+id/textView4" android:layout_weight="3" android:gravity="center"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_weight="7"
                >
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/switch1" android:checked="false"
                    android:layout_weight="1" android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:gravity="center" android:layout_weight="1">
        <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="Sens SMS"
                  android:id="@+id/textView5" android:layout_weight="3" android:gravity="center"/>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="7" android:id="@+id/linearLayout2" android:layout_gravity="center">
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/switch2" android:layout_weight="7" android:gravity="left"
                    android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="20dp" android:layout_weight="1" android:gravity="center" android:paddingTop="20dp">
        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Facebook Username"
                android:id="@+id/textView3" android:layout_weight="3" android:gravity="center"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editText2" android:layout_weight="7" android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="1" android:gravity="center">
        <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="Send Private Message"
                  android:id="@+id/textView6" android:layout_weight="3" android:gravity="center"/>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="7" android:id="@+id/linearLayout3">
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/switch3" android:layout_weight="7" android:checked="false" android:gravity="left"
                    android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:gravity="center_horizontal" android:layout_weight="6"
            android:paddingTop="20dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent" android:layout_weight="1" android:gravity="center_horizontal">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      Save      "
                    android:id="@+id/button"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent" android:layout_weight="1" android:gravity="center_horizontal">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     Cancel     "
                    android:id="@+id/button2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>