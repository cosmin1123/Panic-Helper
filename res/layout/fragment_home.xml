<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:orientation="vertical" tools:context=".MainActivity"
              android:baselineAligned="false" android:background="@drawable/back_ground">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="2" android:weightSum="10">
        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button" android:background="@drawable/button_alarm"
                android:layout_weight="3"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent" android:layout_weight="4" android:gravity="center">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/holdCounterText" android:textColor="#CC0000"
                    android:gravity="center" android:textStyle="bold" android:textSize="22sp"/>
        </LinearLayout>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button2" android:singleLine="false" android:background="@drawable/button_light"
                android:layout_alignParentRight="true" android:layout_weight="3"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="3.3" android:gravity="center" android:weightSum="10">
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/help_button"
                android:scaleType="fitCenter"
                android:background="@drawable/button_emergency"
                android:cropToPadding="true" android:layout_weight="5.5"/>
    </LinearLayout>
    <TextView android:layout_width="fill_parent" android:layout_height="0dp" android:text="Hold 5 seconds for instant help"
              android:id="@+id/textView15" android:layout_weight="0.6" android:singleLine="false" android:textSize="22sp"
              android:textIsSelectable="false" android:textColor="#CC0000" android:gravity="center|center_vertical|center_horizontal|top"
              android:textStyle="bold"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Emergency Contacts"
            android:id="@+id/textView" android:layout_weight="0.5" android:singleLine="false" android:textSize="22sp"
            android:textIsSelectable="false" android:textColor="#ffff" android:gravity="center|top"
            />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="3">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight=".15" android:background="#d8d8d8d1"
                android:baselineAligned="false">
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="No."
                      android:id="@+id/textView13" android:layout_weight="1" android:gravity="center_vertical"
                      android:textSize="17sp" android:textColor="#ffff"/>
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="Name"
                      android:id="@+id/textView14" android:layout_weight="4" android:singleLine="false"
                      android:gravity="center_vertical" android:textSize="17sp" android:textColor="#ffff"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Method of contact"
                    android:id="@+id/textView4" android:layout_weight="5"
                    android:textSize="17sp" android:textColor="#ffff" android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight=".15" android:background="@drawable/border_table">
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="#1"
                      android:id="@+id/textView5" android:layout_weight="1" android:gravity="center_vertical"
                      android:textSize="17sp" android:textColor="#ffff"/>
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="Mother"
                      android:id="@+id/textView6" android:layout_weight="4" android:singleLine="false"
                      android:gravity="center_vertical" android:textSize="17sp" android:textColor="#ffff"/>
            <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox" android:checked="false" android:layout_weight="1.66"
                    android:background="@drawable/ic_phone_call"/>
            <CheckBox android:layout_width="0dp" android:layout_height="wrap_content"
                      android:id="@+id/checkBox2" android:checked="false" android:layout_weight="1.66"
                      android:background="@drawable/ic_phone_sms"/>
            <CheckBox android:layout_width="0dp" android:layout_height="wrap_content"
                      android:id="@+id/checkBox3" android:checked="false" android:layout_weight="1.66"
                      android:background="@drawable/ic_facebook2"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight=".15" android:background="@drawable/border_table">
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="#2"
                      android:id="@+id/textView7" android:layout_weight="1" android:gravity="center_vertical"
                      android:textSize="17sp" android:textColor="#ffff"/>
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="112"
                      android:id="@+id/textView8" android:layout_weight="4" android:singleLine="false"
                      android:gravity="center_vertical" android:textSize="17sp" android:textColor="#ffff"/>
            <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/checkBox4"
                      android:checked="false" android:layout_weight="1.66"
                      android:background="@drawable/ic_phone_call"/>
            <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/checkBox5"
                      android:checked="false" android:layout_weight="1.66" android:background="@drawable/ic_phone_sms"/>
            <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/checkBox6"
                      android:checked="false" android:layout_weight="1.66" android:background="@drawable/ic_facebook2"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight=".15" android:background="@drawable/border_table">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="#3"
                    android:id="@+id/textView2" android:layout_weight="1" android:gravity="center_vertical"
                    android:textSize="17sp" android:textColor="#ffff"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Father"
                    android:id="@+id/textView3" android:layout_weight="4" android:singleLine="false"
                    android:gravity="center_vertical" android:textSize="17sp" android:textColor="#ffff"/>
            <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/checkBox7"
                      android:checked="false" android:layout_weight="1.66"
                      android:background="@drawable/ic_phone_call"/>
            <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/checkBox8"
                      android:checked="false" android:layout_weight="1.66" android:background="@drawable/ic_phone_sms"/>
            <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/checkBox9"
                      android:checked="false" android:layout_weight="1.66" android:background="@drawable/ic_facebook2"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight=".15" android:background="@drawable/border_table">
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="#4"
                      android:id="@+id/textView9" android:layout_weight="1" android:gravity="center_vertical"
                      android:textSize="17sp" android:textColor="#ffff"/>
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="George Mihai"
                      android:id="@+id/textView10" android:layout_weight="4" android:singleLine="false"
                      android:gravity="center_vertical" android:textSize="17sp" android:textColor="#ffff"/>
            <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/checkBox10"
                      android:checked="false" android:layout_weight="1.66"
                      android:background="@drawable/ic_phone_call"/>
            <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/checkBox11"
                      android:checked="false" android:layout_weight="1.66" android:background="@drawable/ic_phone_sms"/>
            <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/checkBox12"
                      android:checked="false" android:layout_weight="1.66" android:background="@drawable/ic_facebook2"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight=".15" android:background="@drawable/border_table">
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="#5"
                      android:id="@+id/textView11" android:layout_weight="1" android:gravity="center_vertical"
                      android:textSize="17sp" android:textColor="#ffff" android:singleLine="false"/>
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="Alex Smecherul"
                      android:id="@+id/textView12" android:layout_weight="4" android:singleLine="false"
                      android:gravity="center_vertical" android:textSize="17sp" android:textColor="#ffff"/>
            <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/checkBox13"
                      android:checked="false" android:layout_weight="1.66"
                      android:background="@drawable/ic_phone_call"/>
            <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/checkBox14"
                      android:checked="false" android:layout_weight="1.66" android:background="@drawable/ic_phone_sms"/>
            <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/checkBox15"
                      android:checked="false" android:layout_weight="1.66" android:background="@drawable/ic_facebook2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>