<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:orientation="vertical" tools:context=".MainActivity"
              android:baselineAligned="false" android:background="@drawable/back_ground" android:weightSum="10">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="1" android:background="@drawable/background_title_bar">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageView" android:layout_weight=".20" android:src="@drawable/ic_launcher"
                android:scaleType="fitCenter" android:layout_marginBottom="5dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Panic Helper - Main Page"
                android:id="@+id/textView15" android:layout_weight=".80" android:gravity="center_vertical"
                android:textSize="20sp" android:layout_marginBottom="5dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="4">
        <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton" android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:scaleType="fitCenter" android:src="@drawable/alert_triangle2"
                android:background="@drawable/square_button" android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Emergency Contacts"
            android:id="@+id/textView" android:layout_weight="1" android:singleLine="false" android:textSize="22sp"
            android:textIsSelectable="false" android:textColor="#ffff" android:gravity="center_vertical"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="3">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight=".15" android:background="#B4DBD9"
                android:baselineAligned="false">
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="No."
                      android:id="@+id/textView13" android:layout_weight=".10" android:gravity="center_vertical"
                      android:textSize="17sp" android:textColor="#ffff"/>
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="Name"
                      android:id="@+id/textView14" android:layout_weight=".50" android:singleLine="false"
                      android:gravity="center_vertical" android:textSize="17sp" android:textColor="#ffff"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Method of contact"
                    android:id="@+id/textView4" android:layout_weight=".40" android:gravity="center_vertical"
                    android:textSize="17sp" android:textColor="#ffff"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight=".15" android:background="@drawable/border_table">
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="#1"
                      android:id="@+id/textView5" android:layout_weight=".10" android:gravity="center_vertical"
                      android:textSize="17sp" android:textColor="#ffff"/>
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="Name"
                      android:id="@+id/textView6" android:layout_weight=".50" android:singleLine="false"
                      android:gravity="center_vertical" android:textSize="17sp" android:textColor="#ffff"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:id="@+id/checkBox" android:checked="false"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SMS"
                      android:id="@+id/checkBox2" android:checked="false"/>
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fb"
                      android:id="@+id/checkBox3" android:checked="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight=".15" android:background="@drawable/border_table">
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="#2"
                      android:id="@+id/textView7" android:layout_weight=".10" android:gravity="center_vertical"
                      android:textSize="17sp" android:textColor="#ffff"/>
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="Name"
                      android:id="@+id/textView8" android:layout_weight=".50" android:singleLine="false"
                      android:gravity="center_vertical" android:textSize="17sp" android:textColor="#ffff"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight=".15" android:background="@drawable/border_table">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="#3"
                    android:id="@+id/textView2" android:layout_weight=".10" android:gravity="center_vertical"
                    android:textSize="17sp" android:textColor="#ffff"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Name"
                    android:id="@+id/textView3" android:layout_weight=".50" android:singleLine="false"
                    android:gravity="center_vertical" android:textSize="17sp" android:textColor="#ffff"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight=".15" android:background="@drawable/border_table">
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="#4"
                      android:id="@+id/textView9" android:layout_weight=".10" android:gravity="center_vertical"
                      android:textSize="17sp" android:textColor="#ffff"/>
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="Name"
                      android:id="@+id/textView10" android:layout_weight=".50" android:singleLine="false"
                      android:gravity="center_vertical" android:textSize="17sp" android:textColor="#ffff"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight=".15" android:background="@drawable/border_table">
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="#5"
                      android:id="@+id/textView11" android:layout_weight=".10" android:gravity="center_vertical"
                      android:textSize="17sp" android:textColor="#ffff" android:singleLine="false"/>
            <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:text="Name"
                      android:id="@+id/textView12" android:layout_weight=".50" android:singleLine="false"
                      android:gravity="center_vertical" android:textSize="17sp" android:textColor="#ffff"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="1">
        <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2" android:scaleType="fitCenter"
                android:background="@drawable/config_button" android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp" android:layout_marginRight="30dp" android:layout_marginBottom="5dp"
                android:src="@drawable/settings_icon"/>
    </LinearLayout>
</LinearLayout>